! --- 3. SCROLLING & CLIPBOARD ---
*vt100.saveLines: 10000
*vt100.scrollBar: true
*vt100.rightScrollBar: true
*vt100.scrollbar.thickness: 15
! Sync xterm selection with system clipboard (Ctrl+V)
*selectToClipboard: true

! --- 4. MODERN INTERACTION ---
! Enable mouse reporting (allows scroll wheel and mouse clicks in apps like vim)
*vt100.eventMode: true
! Allow Ctrl+Shift+C / Ctrl+Shift+V
*vt100.translations: #override \
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

! --- 5. MISC MODERN FIXES ---
! Better URL and word selection when double-clicking
*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
! Support 256 colors for modern CLI apps
*termName: xterm-256color
! Ensure Unicode support is on
*utf8: 1
 
*directColor: true
*allowTitleOps: true
*titleModes: 16

*visualBell: true
*bellIsUrgent: true

Xcursor.theme: Vanilla-DMZ
Xcursor.size: 24
